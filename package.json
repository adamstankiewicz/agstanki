{
  "name": "adam-stankiewicz",
  "version": "1.0.0",
  "description": "Personal website for Adam Stankiewicz.",
  "main": "app/main.jsx",
  "engines": {
    "node": "6.9.2",
    "npm": "3.10.9"
  },
  "scripts": {
    "lint": "eslint 'app/**/*.@(js|jsx)'",
    "build": "webpack",
    "start": "webpack-dev-server --devtool eval --progress --hot --content-base app",
    "deploy": "NODE_ENV=production webpack -p --config webpack.production.config.js",
    "heroku-postbuild": "yarn deploy"
  },
  "dependencies": {
    "babel-core": "^6.21.0",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.10",
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-0": "^6.16.0",
    "babel-runtime": "^6.20.0",
    "bib2json": "^0.0.1",
    "bootstrap-sass": "^3.3.7",
    "copy-webpack-plugin": "^4.0.1",
    "css-loader": "~0.23.0",
    "express": "^4.14.0",
    "file-loader": "^0.9.0",
    "font-awesome": "^4.7.0",
    "lodash": "^4.17.4",
    "moment": "^2.17.1",
    "node-sass": "^3.4.2",
    "raw-loader": "^0.5.1",
    "react": "^15.4.1",
    "react-dom": "^15.4.1",
    "react-scroll": "^1.4.4",
    "react-scroll-up": "^1.1.5",
    "sass-loader": "^4.1.1",
    "style-loader": "~0.13.0",
    "url-loader": "^0.5.7",
    "webpack": "^1.14.0"
  },
  "devDependencies": {
    "commitizen": "^2.5.0",
    "conventional-changelog-cli": "^1.2.0",
    "cz-conventional-changelog": "^1.1.5",
    "eslint": "^3.12.2",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.8.0",
    "ghooks": "^1.0.3",
    "open-browser-webpack-plugin": "0.0.2",
    "validate-commit-msg": "^2.8.2",
    "webpack-dev-server": "^1.16.2"
  },
  "author": "Adam Stankiewicz",
  "license": "MIT",
  "config": {
    "ghooks": {
      "pre-commit": "npm run lint"
    },
    "validate-commit-msg": {
      "types": [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "chore",
        "revert"
      ],
      "warnOnFail": false,
      "maxSubjectLength": 100
    },
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  }
}
